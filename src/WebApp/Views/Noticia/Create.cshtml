@using Application.NoticiaCommands.Commands

@model CreateNoticiaCommand

<form id="noticiaForm">
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Texto" class="control-label"></label>
        <textarea asp-for="Texto" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Tags:</label>
        <select asp-for="TagIds" asp-items="ViewBag.Tags" class="form-control" multiple="multiple"></select>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    @Html.AntiForgeryToken()
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#noticiaForm").submit(function (event) {
                event.preventDefault();
                var formData = $(this).serialize();

                $.ajax({
                    url: '@Url.Action("Create", "Noticia")',
                    type: 'POST',
                    data: formData,
                    success: function (result) {
                        window.location.href = '@Url.Action("Index")';
                    },
                    error: function (xhr, status, error) {
                        alert("Houve um erro ao salvar a notícia: " + xhr.responseText);
                    }
                });
            });
        });
    </script>
}