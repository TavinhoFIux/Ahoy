@model Domain.Entitys.Noticia

@{
    ViewData["Title"] = "Delete Notícia";
}

<h2>@ViewData["Title"]</h2>
<p>Are you sure you want to delete the notícia titled "@Model.Titulo"?</p>

<form asp-controller="Noticia" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Noticia" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>