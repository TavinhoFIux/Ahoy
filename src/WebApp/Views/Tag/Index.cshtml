@using Domain.Entitys

@model IEnumerable<Tag>

<h2>Tags</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Create New Tag</a>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var tag in Model)
    {
        <tr>
            <td>@tag.Descricao</td>
            <td>
                <a href="@Url.Action("Details", new { Id = tag.Id })">View</a> |
                <a href="@Url.Action("Edit", new { Id = tag.Id })">Edit</a> |
                <form method="post" action="@Url.Action("Delete", new { Id = tag.Id })" style="display:inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
